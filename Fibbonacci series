terms = int(input("How many terms? "))

# initializing first two terms
n1, n2 = 0, 1
count = 0

if terms == 1:
   print("Fibonacci sequence upto",terms,":")
   print(n1)
    
# generating fibonacci 
else:
   print("Fibonacci sequence upto",terms,":")
   while count < terms:
       print(n1, end=",")
       nth = n1 + n2
      
       n1 = n2
       n2 = nth
       count += 1
